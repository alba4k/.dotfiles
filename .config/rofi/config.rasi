configuration{
    modi: "run,drun,calc";

    fixed-num-lines: false;

    font: "MesloLGS Nerd Font 14";
    show-icons: true;
    // icon-theme: "Papirus-dark";
    terminal: "kitty";

    drun-display-format: "{icon} {name}";
    location: 0;
	yoffset: 0;

    disable-history: false;
    hide-scrollbar: true;
    hover-select: false;
    me-select-entry: "";
    me-accept-entry: [ MousePrimary, MouseSecondary, MouseDPrimary ];

    display-drun: "  App ";
    display-run: "  Shell ";
    display-window: " 﩯 Open ";
    display-calc: " Calc ";
    display-clipboard: " Clip";

    sidebar-mode: true;
}

@theme "catppuccin"
