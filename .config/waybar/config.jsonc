/* WAYBAR - alba4k
 *
 * Documentation: https://github.com/Alexays/Waybar/wiki
 *
 * This config is just a clone of my original Polybar configuration, which is itself based on https://github.com/axyl-os/axyl-i3wm/tree/master/etc/skel/.config/i3/polybar
 */

{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "height": 33,
    "exclusive": true,
    "passthrough": false,

    "modules-left": [
        "custom/launcher",
        "cpu",
        "custom/greentored",
        "temperature",
        "custom/redtoyellow",
        "memory",
        "network",
        "custom/greentoblue",
        "bluetooth"
    ],
    "modules-center": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-right": [
        "battery",
        "custom/media-bw",
        "custom/media-pp",
        "custom/media-fw",
        "custom/bluetogreen",
        "pulseaudio",
        "custom/greentoyellow",
        "backlight",
        "clock",
        "tray"
    ],

    "custom/launcher": {
        "format": " ",
        "interval": "once",

        "on-click": "rofi -show drun",
        "on-click-right": "rofi -show run",
        "on-click-middle": "wlogout --protocol layer-shell",

        "tooltip": false
    },

    "cpu": {
        "interval": 10,
        "format": "󰍛 {usage}%",
        "format-alt": "{min_frequency} GHz - {max_frequency} GHz"
    },

    "temperature": {
        "thermal-zone": 6,
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["", "", "", "", ""],
        "tooltip": false
    },

    "memory": {
        "interval": 15,
        "format": " {percentage}%",
        "format-alt": " {used}GB",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": " {used:0.1f}GB/{total:0.1f}GB"
    },
    
    "network": {
        "interval": 300,
        "format-wifi": "  {essid}",
        "format-ethernet": "󱘖 Wired",
        "tooltip-format": "󱘖 {ipaddr}  {bandwidthUpBytes}  {bandwidthDownBytes}",
        "format-linked": "󱘖 {ifname} (No IP)",
        "format-disconnected": "睊 Offline",
        "format-alt": "  {signalStrength}%",

        "on-click": "nm-connection-editor"
    },

    "bluetooth": {
	    "format": "",
	    "format-disabled": "",
	    "format-connected": " {num_connections}",
	    "tooltip-format-connected": "{device_enumerate}",
	    "tooltip-format-enumerate-connected": " {device_alias}",
	    "tooltip-format-enumerate-connected-battery": " {device_alias} ({device_battery_percentage}%)",

        "on-click": "blueman-manager",
        "on-click-right": "~/.local/bin/toggle_bluetooth.sh",
        "on-click-middle": "~/.local/bin/buds"
    },

    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": " ",
            "2": " ",
            "3": " ",
            "4": " ",
            "5": " ",
            "6": " ",
            "7": " ",
            "default": " "
        },

        "on-click": "activate",
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1"
    },

    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        // I now consider myself to be a regex god
        "rewrite": {
            "(\\([0-9]*\\) )?(.*) @ .*( \\([0-9]*\\))?": "Telegram Desktop ($2)",
            ".*Mozilla Firefox": "Firefox",
            "rofi.*": "Rofi",
            "Cemu.*FPS: ([0-9]+\\.[0-9]+).*TitleId.*\\] (.*) \\[.*": "Cemu - $2 ($1 FPS)",
            "": "Desktop"
        },

        // "on-click-right": "hyprctl dispatch fullscreen",
        "on-click-right": "sleep .3 && ~/.config/hypr/resize.sh",
        "on-click-middle": "hyprctl dispatch killactive"
    },

    "battery": {
        "interval": 5,

        "format": "{icon} {capacity}%",
        "format-icons": [" ", " ", " ", " ", " "],
        "format-charging": "{icon} {capacity}% ",
        "format-plugged": "{icon} {capacity}% ",
        "tooltip-format": "{power}W - {timeTo}",

        "states": {
            "full": 100,
            "great": 97,
            "good": 85,
            "ok": 50,
            "warning": 30,
            "low": 20,
            "critical": 10
        },

        "on-click": "~/.local/bin/powersave",
        "on-click-right": "~/.local/bin/balanced",
        "on-click-middle": "~/.local/bin/performance"
    },

    "custom/media-bw": {
        "interval": 1,
        "format": "",
        "exec": "~/.config/waybar/audio-back-skip.sh 2>/dev/null",

        "on-click": "playerctl previous",
        "on-click-right": "~/.config/rofi/music/music",
        "on-click-middle": "~/.config/rofi/music/music",

        "return-type": "json"
    },
    "custom/media-pp": {
        "interval": 1,
        "format": "{}",
        "exec": "~/.config/waybar/audio-play-pause.sh 2>/dev/null",

        "on-click": "playerctl play-pause",
        "on-click-right": "~/.config/rofi/music/music",
        "on-click-middle": "~/.config/rofi/music/music",

    
        "return-type": "json"
    },
    "custom/media-fw": {
        "interval": 1,
        "format": "",
        "exec": "~/.config/waybar/audio-back-skip.sh 2>/dev/null",

        "on-click": "playerctl next",
        "on-click-right": "~/.config/rofi/music/music",
        "on-click-middle": "~/.config/rofi/music/music",

        "return-type": "json"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "婢 ({volume}%)",
        "on-click": "pavucontrol -t 3",
        "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-click-middle": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ +1%",
        "tooltip-format": "{desc}",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            //"speaker": "󰓃",
            "hifi": "󰓃",
            "hdmi": "󰽟",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        }
    },

    "backlight": {
        "interval": 10,
        "format": "{icon} {percent}%",
        "scroll-step": -0.3,
        "format-icons": ["", "", "", ""],

        "on-click": "killall -9 wlsunset || wlsunset -S 3:59 -s 4:00 -t 4500 -T 6500",

        "tooltip": false
    },

    "clock": {
        "format": "{: %H:%M}",
        "format-alt": "{: %a %d %b}",
        "tooltip-format": "<tt><big>{calendar}</big></tt>"
    },

    "tray": {
        "icon-size": 15,
        "spacing": 5
    },

    // decoration //

    "custom/greentored": {
        "interval": "once",
        "format": ""
    },

    "custom/redtoyellow": {
        "interval": "once",
        "format": ""
    },

    "custom/greentoblue": {
        "interval": "once",
        "format": ""
    },

    "custom/bluetogreen": {
        "interval": "once",
        "format": ""
    },

    // backlight disappears when only using an external monitor
    "custom/greentoyellow": {
        "interval": "once",
        "return-type": "json",
        
        "exec": "~/.config/waybar/greentoyellow.sh",

        "format": "{}"
    }
}
