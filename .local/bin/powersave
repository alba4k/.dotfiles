#!/bin/python
import subprocess

subprocess.run(["pkexec", "sh", "-c", "x86_energy_perf_policy power && x86_energy_perf_policy --turbo-enable 0 && cpupower frequency-set -g powersave -d 400MHz -u 1.5GHz"])

current = subprocess.run(["light"], stdout=subprocess.PIPE).stdout.decode("utf-8")
subprocess.run(["light", "-S", str(float(current)*0.75)])

print("You are now in power saving mode!")
